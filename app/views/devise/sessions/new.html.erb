<div class="container">
    <div class="row">
        <h2 style="background-color: #3CB371">
            ログイン
        </h2>
        <div class="col-12">
            <h10 style="width: 330px">会員の方はこちらからログイン</h10>    
        </div>
            
    </div>
        <div class="row">
            <%= form_with model: @customer, url: customer_session_path, local: true  do |f| %>
                <div class="field">
                    <%= f.label :email, "メールアドレス"  %><br> 
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div><br>

                    <div class="field">
                        <%= f.label :password, "パスワード"  %><br>              
                        <%= f.password_field :password, autocomplete: "current-password" %>
                    </div><br>

                        <div class="actions">
                            <%= f.submit "ログイン", class: "btn btn-primary btn-lg center-block" %>
                        </div>
            <% end %>            
        </div>    
            <h10 style="width: 100px;background-color: #3CB371">
                登録がお済みでない方
            </h10>
                <p>
                    <%= link_to "こちら", new_customer_registration_path %>から新規登録をしてください。
                </p>
</div>
  

