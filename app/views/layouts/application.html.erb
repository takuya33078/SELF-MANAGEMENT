<!DOCTYPE html>
<html>
    <head>
        <title>SELF MANAGEMENT(セルマネ)</title>
            <%= csrf_meta_tags %>
            <%= csp_meta_tag %>
    
                <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
                <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

       <body>
          <div id="wrapper">
      
              <header>
                <nav class="navbar navbar-expand-lg">
                 <div class="container">
                    <%= link_to root_path do %>
                    <%= image_tag "top.png", size: '240x180' %>
                    <% end %>
      
                    <ul class="nav navbar-nav navbar-right">
      
                      <% if customer_signed_in? %>
      
                      <li style="font-family: HiraMinPro-W6; margin-top: 15px;">
                      ようこそ、<%= current_customer.name  %>さん！
                      </li>
      
                      <li>
                      <%= link_to customers_my_page_path, class: "fas btn btn-light" do %>
                      マイページ
                      <% end %>
                      </li>
      
                      <li>
                      <%= link_to weights_path, class: "fas btn btn-light" do %>
                      体重管理
                      <% end %>
                      </li>
      
                      <li>
                      <%= link_to meals_path, class: "fas btn btn-light" do %>
                      食事管理
                      <% end %>
                      </li>
      
                      <li>
                      <%= link_to destroy_customer_session_path, method: :delete, class: "fas btn btn-light" do %>
                      ログアウト
                      <% end %>
                      </li>
      
                      
      
                     <% else %>
      
                      <li>
                      <%= link_to about_path, class: "fas btn btn-light" do %>
                      セルマネについて
                      <% end %>
                      </li>
      

      
                      <li>
                        <%= link_to new_customer_registration_path, class: "fas btn btn-light" do %>
                        新規登録
                        <% end %>
                      </li>
      
                      <li>
                        <%= link_to new_customer_session_path, class: "fas btn btn-light" do %>
                        ログイン
                        <% end %>
                      </li>
                    <% end %>
                    </ul>
                </div>
                </nav>
              </header>
      
              <main id="content">
                <%= yield %>
              </main>
          </div>
        </body>
</html>
