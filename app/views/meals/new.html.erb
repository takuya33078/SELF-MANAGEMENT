<div class="container">
    <div class="row">
        <h10 style="background-color: #3CB371">食事新規登録</h10>
    </div>

        <div class="row">
            <% if flash[:meal_created_error] %>
                <span class="text-danger"><%= flash[:meal_created_error] %></span>
            <% end %>
        </div>

            <%= form_with model: @meal, url: meals_path do |f| %>
                <div class="col">
                    <div class="form-group row">
                        <%= f.label :料理名, class: "col-sm-2" %>
                        <%= f.text_field :dish_name, class: "form-control col-sm-3" %>
                    </div>
                    
                        <div class="col">
                            <%= f.label :メモ, class: "col-sm-1" %>
                            <%= f.text_area :comment, size: "35x7" %>
                        </div>
                
                            <div class="col-sm-2 mt-auto ml-5">
                                <%= f.submit :新規登録, class: "btn btn-info" %>
                            </div>
            
                </div>
            
            <% end %>

</div>